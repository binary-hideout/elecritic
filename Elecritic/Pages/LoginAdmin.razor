@page "/admin"
@inject NavigationManager navigationManager
@using Elecritic.Models

<div class="middle-box">
    <div class="row">
        <div class="col-12">
            <h2>Llene los campos pra continuar</h2>
            <EditForm Model="ModelAdmin" OnValidSubmit="LoginUserAdmin">
                <RadzenCard>
                    @*<AlertMessage Message="@message" MessageType="@messageType" />*@
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <label>Correo</label>
                    <RadzenTextBox @bind-Value="ModelAdmin.Email"></RadzenTextBox>

                    <label>Contraseña</label>
                    <RadzenPassword @bind-Value="ModelAdmin.Password" class="finalBox"></RadzenPassword>

                    <RadzenButton ButtonType="Radzen.ButtonType.Submit" Text="Continuar"
                                  ButtonStyle="Radzen.ButtonStyle.Primary" class="btn-block mr-2" />
                </RadzenCard>
            </EditForm>
        </div>
    </div>
</div>